@using Canteen_Management_System.Models
@model Payment_Details
@{
    ViewBag.Title = "_ManualPayment";
}

<section class="vh-100" >
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                @using (Html.BeginForm("Payment", "Admin", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(model => model.Alias)
                                    <div class="d-flex flex-row align-items-center mb-4">

                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            <input type="text" value="@ViewBag.DueAmount" class="form-control" disabled />
                                            @*@Html.EditorFor(x => x.Total_Amt, new { htmlAttributes = new { @class = "form-control", @placeholder = "Paying Amount", @id = "pay-amt", @disabled = "disable",@value= ViewBag.DueAmount??"" } })*@
                                            <label class="form-label" for="form3Example1c">Due Amount</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">

                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            @Html.EditorFor(x => x.Paid_Amt, new { htmlAttributes = new { @class = "form-control", @placeholder = "Amount", @id = "pay-amt" } })
                                            <label class="form-label" for="pay-amt">Paying Amount</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">

                                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                            @Html.EditorFor(x => x.Received_By, new { htmlAttributes = new { @class = "form-control", @placeholder = "Receiver Name"} })
                                            <label class="form-label" for="pay-amt">Received By</label>
                                        </div>
                                    </div>

                                    
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button class="btn btn-primary btn-lg">Submit</button>
                                    </div>
                                }


                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="~/Assets/money.jpeg"
                                     class="img-fluid rounded-3" alt="Receive Cash ">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
