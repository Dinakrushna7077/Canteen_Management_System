@using Canteen_Management_System.Models
@model Customer

<div class="container-fluid d-flex flex-column align-items-center justify-content-center w-100 py-4">

    <!-- Header Row (hidden on xs screens) -->
    <div class="row w-100 justify-content-center text-center d-none d-sm-flex">
        <div class="col-6 col-sm-3 col-md-2">
            <h5 class="fw-bolder text-secondary">Canteen Number</h5>
        </div>
        <div class="col-6 col-sm-3 col-md-2">
            <h5 class="fw-bolder text-secondary">Name</h5>
        </div>
        <div class="col-6 col-sm-3 col-md-2">
            <h5 class="fw-bolder text-secondary">Meal Status</h5>
        </div>
        <div class="col-6 col-sm-3 col-md-2">
            <h5 class="fw-bolder text-secondary">Action</h5>
        </div>
    </div>

    <!-- Data Row -->
    <div class="row w-100 justify-content-center text-center my-3">
        <div class="col-6 col-sm-3 col-md-2">
            <h6 class="fw-bolder text-dark">@Model.Alias</h6>
        </div>
        <div class="col-6 col-sm-3 col-md-2">
            <h6 class="fw-bolder text-dark">@Model.Name</h6>
        </div>
        <div class="col-6 col-sm-3 col-md-2">
            <h6 class="fw-bolder text-dark">@Model.Meal_Status</h6>
        </div>
        <div class="col-6 col-sm-3 col-md-2">
            @if (Model.Meal_Status == "On")
            {
                @Html.ActionLink("Off", "MealOff", "Admin", new { alias = Model.Alias }, new { @class = "btn btn-primary" })
            }
            else if (Model.Meal_Status == "Off")
            {
                @Html.ActionLink("On", "MealOn", "Admin", new { alias = Model.Alias }, new { @class = "btn btn-primary" })
            }
        </div>
    </div>

</div>
