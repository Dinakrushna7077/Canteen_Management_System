@using Canteen_Management_System.Models
@model Customer
@{
    ViewBag.Title = "AdminLogin";
}
<html>
<head>
    <style>
    </style>
</head>
<body>
    <div id="successMessage">@TempData["successMessage"]</div>
    <div id="warningMessage">@TempData["warningMessage"]</div>
    <section class="bg-light py-3 py-md-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                    <div class="card border border-light-subtle rounded-3 shadow-sm">
                        <div class="card-body p-3 p-md-4 p-xl-5">
                            <h2 class="fs-10 fw-normal text-center text-secondary mb-4">Student Login</h2>

                            @using (Html.BeginForm("StudentLogin", "Student", "Post"))
                            {
                                @Html.AntiForgeryToken()
                                <div class="row gy-2 overflow-hidden">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "name@example.com", @id = "email" } })
                                            <label for="email" class="form-label">Email Id</label>
                                        </div>
                                    </div>
                                    <div class="text-center mt-0">OR</div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            @Html.EditorFor(x => x.Mobile, new { htmlAttributes = new { @class = "form-control", @placeholder = "name@example.com", @id = "mobile" } })
                                            <label for="email" class="form-label">Mobile Number</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password", @id = "password" } })
                                            <label for="password" class="form-label">Password</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid my-3">
                                            <button class="btn btn-primary btn-lg" type="submit">Log in</button>
                                        </div>
                                    </div>
                                    
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>


